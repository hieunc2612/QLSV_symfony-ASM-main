<form method="post" action="{{ path('app_teacher_delete', {'id': teacher.id}) }}" onsubmit="return confirm('Are you sure you want to delete this Teacher?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ teacher.id) }}">
    <button class="btn btn-danger" style="margin:auto; display:block">Delete</button>
</form>
