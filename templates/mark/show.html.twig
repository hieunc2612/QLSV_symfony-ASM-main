{% extends 'base.html.twig' %}

{% block title %}Mark{% endblock %}

{% block body %}
    <div>
    <h1>Mark Infomation</h1>
    </div>
    <div class=" table container px-5">
    <table class="table  table-bordered container text-center px-5 ">
        <tbody>
            <tr>
                <th class="table-primary">Id</th>
                <td>{{ mark.id }}</td>
            </tr>
             <tr>
                <th class="table-info">Student</th>
                <td>{{ mark.Student.Name }}</td>
            </tr>
             <tr>
                <th class="table-primary">Subject</th>
                <td>{{ mark.Subject.Name }}</td>
            </tr>
            <tr>
                <th class="table-info">ASM1</th>
                <td>{{ mark.ASM1 }}</td>
            </tr>
            <tr>
                <th class="table-primary">ASM2</th>
                <td>{{ mark.ASM2 }}</td>
            </tr>
            <tr>
                <th class="table-info">Average</th>
                <td>{{ mark.Average }}</td>
            </tr>
            <tr>
                <th class="table-primary">Status</th>
                <td>{{ mark.Status }}</td>
            </tr>
        </tbody>
    </table>
     <div class=" gap-2 col-2 mx-auto d-md-block" >
    <a class="btn btn-info" style="margin:auto; display:block" href="{{ path('app_mark_index') }}">Back to list</a>
     </div>
     <div class="py-1">
    {{ include('mark/_delete_form.html.twig') }}
    </div>
    
{% endblock %}
