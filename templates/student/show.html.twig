{% extends 'base.html.twig' %}

{% block title %}
  Student
{% endblock %}

{% block body %}
<div class="table container px-5">
  <h1>
    Student
  </h1>
  <table class="table table-bordered container text-center px-5">
    <tbody>
      <tr>
        <th class="table-primary">Id</th>
        <td>{{ student.id }}</td>
      </tr>
      <tr>
        <th class="table-info">Name</th>
        <td>{{ student.Name }}</td>
      </tr>
      <tr>
        <th class="table-primary">Gender</th>
        <td>{{ student.Gender }}</td>
      </tr>
      <tr>
        <th>
          DayofBirth
        </th>
        <td>
          {{ student.DayofBirth ? student.DayofBirth|date('Y-m-d') : '' }}
        </td>
      </tr>
      <tr>
        <th>Course</th>
        <td>{{ student.Course.CourseName }}</td>
      </tr>
    </tbody>
  </table>
  <div class="gap-2 col-2 mx-auto d-md-block">
    <a class="btn btn-info" style="margin:auto; display:block" href="{{ path('app_student_index') }}">Back to list</a>
    </div>
  <div class="py-1">
    {{ include('student/_delete_form.html.twig') }}
  </div>
  </div>
{% endblock %}
