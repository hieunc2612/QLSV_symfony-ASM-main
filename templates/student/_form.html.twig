{{ form_start(form) }}
{#    {{ form_widget(form) }}#}
<div class="container">
    <div class="row">
        <label>
            {{ form_label(form.Name, "Fullname") }}
        </label>
        {{ form_widget(form.Name, {'attr': {'class': 'form-control'}}) }}
    </div>
<div class="row">
        <label>
            {{ form_label(form.Gender, "Gender") }}
        </label>
        {{ form_widget(form.Gender, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="row">
        <label>
            {{ form_label(form.DayofBirth, "Day of Birth") }}
        </label>
        {{ form_widget(form.DayofBirth, {'attr': {'class': 'form-control', 'type':'date'}}) }}
    </div>
    <div class="row ">
        <label >
            {{ form_label (form.Course, "Course") }}
        </label>
        {{ form_widget(form.Course, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>
<div class="d-grid gap-2 col-2 mx-auto d-md-block py-1">
    <button class="btn btn-success" style="margin:auto; display:block">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}